<h1>Search Posts</h1>

<body>
    <form name="search" action="/search/posts" method="post">
    Search (post description): <input type="search" name="carsappsearch" autofocus required>
                       <input type="submit" value="Search">
    </form>

    {{#result_count}}
    Results: {{result_count}}
    {{/result_count}}
    <br>

    <style>
    table,th,td
    { border:1px solid black;
      border-collapse:collapse; }
    th,td
    { padding:5px; }
    </style>
     
    <table style= "width:300px" width="100%" border="0" cellspacing="0" cellpadding="3">
        {{#found?}}
        <tr>
            <th> Vehicle </th>
            <th> Price </th>
            <th> Description </th>
            <th> User</th>
        </tr>
        {{/found?}}
        {{#result}}
        <tr>
            {{#vehicle}}
            <td>{{name}}</td>
            {{/vehicle}}
            <td>{{price}}</td>
            <td>{{description}}</td>
            {{#user}}
            <td><a href="http://localhost:4567/users/{{id}}">  {{name}} </a></td>
            {{/user}}
        </tr>
        {{/result}}
    </table>
</body>